upstream {{ item.value.upstreams[0].backend_name }} {
    server {{ item.value.upstreams[0].backend_address }}:{{ item.value.upstreams[0].backend_port }};
}

upstream {{ item.value.upstreams[1].backend_name }} {
    server {{ item.value.upstreams[1].backend_address }}:{{ item.value.upstreams[1].backend_port }} weight=1 fail_timeout=0;
}

server {

    listen 80;
    server_name    {{ item.value.domains | join(' ') }};

    location /.well-known/acme-challenge {
      alias /var/www/{{ item.key }}/.well-known/acme-challenge;
    }

    location / {
     return 301 https://$server_name$request_uri;
    }
}

server {
    listen 443 ssl;
    server_name    {{ item.value.domains | join(' ') }};
    rewrite_log on;

    access_log /var/log/nginx/{{ item.key }}_access.log;
    error_log /var/log/nginx/{{ item.key }}_error.log error;

    ssl_certificate /etc/letsencrypt/live/{{ item.key }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ item.key }}/privkey.pem;
    ssl_session_timeout 5m;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers 'EECDH+AESGCM:EDH+AESGCM:AES256+EECDH:AES256+EDH';
    ssl_prefer_server_ciphers on;
    ssl_session_cache shared:SSL:10m;

    location /.well-known/acme-challenge {
      alias /var/www/{{ item.key }}/.well-known/acme-challenge;
    }

    # Turn on OCSP stapling as recommended at
    # https://community.letsencrypt.org/t/integration-guide/13123
    # requires nginx version >= 1.3.7
    ssl_stapling on;
    ssl_stapling_verify on;

    # Uncomment this line only after testing in browsers,
    # as it commits you to continuing to serve your site over HTTPS in future
    # https://www.nginx.com/blog/http-strict-transport-security-hsts-and-nginx/
    # The always parameter ensures that the header is set for all responses, including internally generated error responses.
    # Older versions of NGINX (prior to version 1.7.5 or NGINX Plus R5) don't support the always parameter.
    # add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
    # add_header Strict-Transport-Security "max-age=31536000";

    # Specifies the maximum accepted body size of a client request,
    #   as indicated by the request header Content-Length.
    client_max_body_size 200m;

    # add ssl specific settings
    keepalive_timeout    90;

    # increase proxy buffer to handle some OpenERP web requests
    proxy_buffers 16 64k;
    proxy_buffer_size 128k;

    #general proxy settings
    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503;

    # set headers
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forward-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_x_forwarded_host;

    # Let the Odoo web service know that we're using HTTPS, otherwise
    # it will generate URL using http:// and not https://
    proxy_set_header X-Forwarded-Proto http;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    # by default, do not forward anything
    proxy_redirect off;
    proxy_buffering off;

    # common gzip
    gzip_types text/css text/less text/plain text/xml application/xml application/json application/javascript;
    gzip on;

    location / {
    {% for filter in item.value.filters %}
{{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
    {% endfor %}

    proxy_pass    http://{{ item.value.upstreams[0].backend_name }};
    }

    location /longpolling {
    {% for filter in item.value.filters %}
{{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
    {% endfor %}

    proxy_pass    http://{{ item.value.upstreams[1].backend_name }};
    }

    location ~* /web/database/(manager|selector) {
    {% for filter in item.value.filters %}
{{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
    {% endfor %}

    proxy_pass http://{{ item.value.upstreams[0].backend_name }};
    }

    location ~* /web/login {
    {% for filter in item.value.filters %}
{{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
    {% endfor %}

    proxy_pass http://{{ item.value.upstreams[0].backend_name }};
    }

    location ~* /web/static/ {
    # cache some static data in memory for 90mins.
    # under heavy load this should relieve stress on the odoo web interface a bit.
    proxy_cache_valid 200 90m;
    proxy_buffering    on;
    expires 864000;

    {% for filter in item.value.filters %}
{{ filter.filter_action }} {{ filter.filter_ip }}; # {{ filter.filter_comment }}
    {% endfor %}

    proxy_pass http://{{ item.value.upstreams[0].backend_name }};
    }
}
